<form id="manage_artist_form">
  <div class="form-group">
    <label for="artist_avatar">Artist PFP</label>
    <input name="user[avatar]" id="artist_avatar" type="file" placeholder="choose a picture">
  </div>
  <div class="form-group">
    <label for="artist_name">Name<span class="ms-1 text-danger">*</span></label>
    <input name="user[name]" id="artist_name" type="text" placeholder="Enter a name" value="<%= @artist.user.name %>">
  </div>
  <div class="form-group">
    <label for="artist_dob">Date of Birth</label>
    <input name="user[dob]" id="artist_dob" type="date" value="<%= @artist.user.dob %>">
  </div>
  <div class="form-group">
    <label for="artist_email">Email<span class="ms-1 text-danger">*</span></label>
    <input name="user[email]" id="artist_email" type="email" placeholder="Enter an email" value="<%= @artist.user.email %>">
  </div>
  <div class="form-group">
    <label for="artist_bio">Bio</label>
    <textarea name="artist[bio]" id="artist_bio" rows="10" placeholder="Enter artist bio"><%= @artist.bio %></textarea>
  </div>
</form>